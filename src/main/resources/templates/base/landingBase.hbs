        <ul class="links">
            <li><a href="/">Menu</li>
            <li><a href="">Contacto</li>
        </ul>
        <div class="header-btns" href="#">
            {{#block "header-btns-register"}}{{/block}}
        </div>
        <div class="toggle-btn">
