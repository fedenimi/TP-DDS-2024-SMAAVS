    <script src="../js/mapViandas.js"></script>
    <script src="../js/dropdownScript.js"></script>
    <script src="../js/modalViandas.js"></script>
    <script src="../js/donarViandas.js"></script>
    <script src="../js/timer.js"></script>
{{/partial}}

