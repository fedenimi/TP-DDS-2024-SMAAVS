            <input type="radio" name="slider" id="carousel-s4">
            <input type="radio" name="slider" id="carousel-s5">
            <div class="cards">
                <label for="carousel-s1" id="slide1">
                    <div class="card">
                        <div class="carousel-img">
                            <img src="/img/administrarHeladeras.webp" alt="">
                            <div class="card-dots">
                                <div></div>
                                <div></div>
                                <div></div>
                            </div>
                        </div>
                        <div class="carousel-info">
                            <a href="adminHeladeras" class="carousel-btn">Administrar heladeras</a>
                        </div>
                    </div>
                </label>
                <label for="carousel-s5" id="slide5">
                    <div class="card">
                        <div class="carousel-img">
                            <img src="/img/donarDinero.jpg" alt="">
                        </div>
                        <div class="carousel-info">
                            <a href="dinero" class="carousel-btn">Donar dinero</a>
                        </div>
                    </div>
                </label>
                <label for="carousel-s2" id="slide2">
                    <div class="card">
                        <div class="carousel-img">
                            <img src="/img/publicarProductos.jpg" alt="">
                            <div class="card-dots">
                                <div></div>
                                <div></div>
                                <div></div>
                            </div>
                        </div>
                        <div class="carousel-info">
                            <a href="publicar-producto" class="carousel-btn">Publicar productos</a>
                        </div>
                    </div>
                </label>

            </div>
        </section>
    </main>
{{/partial}}
{{#partial "home-scripts"}}
    <script src="../js/dropdownScript.js">
        const toggleBtn = document.querySelector('.toggle-btn');
        const toggleBtnIcon = document.querySelector('.toggle-btn i');
        const dropdownMenu = document.querySelector('.dropdown-menu');

        toggleBtn.onclick = function () {
            dropdownMenu.classList.toggle('open');
            const isOpen = dropdownMenu.classList.contains('open');

            toggleBtnIcon.classList = isOpen ? 'fa-solid fa-xmark' : 'fa-solid fa-bars';
        }
    </script>
{{/partial}}
